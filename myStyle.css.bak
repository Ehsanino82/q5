body {
    font-family: b roya;
    font-size: 26pt;
    background-color: #373737;
	color: #ff652f;
    padding: 30px;
	text-align: center;
}

h1{
	font-family: b titr;
	font-size: 36pt;
	color: #ffe400;
	text-align: center;
}
h1 span {
    border: 3px dashed #f8e9a1;
    padding: 10px;
}

p {
	font-family: b nazanin;
    padding: 0;
    margin: 0;
}

ul{
  list-style-type: none;
  margin: 0;
  padding: 0;
}
nav ul{
  list-style-type: none;
  margin: 0;
  padding:0;
  overflow: hidden;
  text-align: center;
}
nav ul li{
  display: inline-block;
  padding: 20px;
}

.nav-item a:hover{
  color: #14a76c;
  font-weight: 550;
}

nav ul li a:link,
nav ul li a:visited{
  display: block;
  padding: 10px;
  color: #f76c6c;
  text-decoration: none;
  font-weight: 500;
}

.submit {
    background-color: #3fc6c2;
    padding: 12px 45px;
    border-radius: 5px;
    cursor: pointer;
    color: #ffffff;
    border: none;
    font-weight: bold;
}
.submit:hover {
    background-color: #43a09d;
}
textarea {
    height: 60px;
}
input, textarea {
    margin-bottom: 10px;
    font-size: 11pt;
    padding: 15px 10px 10px;
    border: 1px solid #cecece;
    background-color: #efefef;
    color: #787575;
    border-radius: 5px;
    width: 30%;
}